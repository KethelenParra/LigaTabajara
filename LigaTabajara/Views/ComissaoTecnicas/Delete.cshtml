@* Views/ComissaoTecnica/Delete.cshtml *@
@model LigaTabajara.Models.ComissaoTecnica

@{
    ViewBag.Title = "Excluir Comissão Técnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm w-100" style="max-width:600px;">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirmar Exclusão</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Time.Nome)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Time.Nome)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Nome)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Nome)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Cargo)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Cargo)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DataNascimento)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.DataNascimento)</dd>
            </dl>

            @using (Html.BeginForm("Delete", "ComissaoTecnica", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div class="card-footer bg-light d-flex justify-content-between">
                    @Html.ActionLink("← Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
                    <button type="submit" class="btn btn-danger">Excluir Comissão</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
