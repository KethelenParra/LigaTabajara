@model LigaTabajara.Models.ComissaoTecnica

@{
    ViewBag.Title = "Detalhes da Comissão Técnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Card genérico para todos os Details */
    .card-detail {
        max-width: 600px;
        margin: 2rem auto;
    }

    .card-detail .card-header {
        background-color: #d4edda; /* verde claro */
        color: #155724;
    }
</style>

<div class="card card-detail mb-5">
    <div class="card-header">
        <h5 class="mb-0">Detalhes da Comissão Técnica</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 font-weight-bold">Time</dt>
            <dd class="col-sm-8">@Model.Time.Nome</dd>

            <dt class="col-sm-4 font-weight-bold">Nome</dt>
            <dd class="col-sm-8">@Model.Nome</dd>

            <dt class="col-sm-4 font-weight-bold">Cargo</dt>
            <dd class="col-sm-8">@Model.Cargo</dd>

            <dt class="col-sm-4 font-weight-bold">Data Nasc.</dt>
            <dd class="col-sm-8">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        @Html.ActionLink("← Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })
    </div>
</div>
