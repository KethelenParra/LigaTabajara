@model IEnumerable<LigaTabajara.Models.ComissaoTecnica>

@{
    ViewBag.Title = "Comissão Técnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Comissão Técnica</h2>
    <div>
        @Html.ActionLink("Novo Membro", "Create", "ComissaoTecnicas", null, new { @class = "btn btn-success me-2" })
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="thead-light">
                <tr>
                    <th style="width:25%;">Time</th>
                    <th style="width:35%;">Nome</th>
                    <th style="width:25%;">Cargo</th>
                    <th style="width:15%;">Nasc.</th>
                    <th style="width:15%;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Time.Nome</td>
                        <td>@item.Nome</td>
                        <td>@item.Cargo</td>
                        <td>@item.DataNascimento.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-secondary" })
                                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
