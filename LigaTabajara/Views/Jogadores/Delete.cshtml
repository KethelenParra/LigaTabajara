@* Views/Jogador/Delete.cshtml *@
@model LigaTabajara.Models.Jogador

@{
    ViewBag.Title = "Excluir Jogador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm w-100" style="max-width:600px;">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirmar Exclusão</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Time.Nome)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Time.Nome)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DataNascimento)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.DataNascimento)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Nacionalidade)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Nacionalidade)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Posicao)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Posicao)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.NumCamisa)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.NumCamisa)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Altura)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Altura)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Peso)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Peso)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.PePreferido)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.PePreferido)</dd>
            </dl>

            @using (Html.BeginForm("Delete", "Jogadores", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID)

                <div class="card-footer bg-light d-flex justify-content-between">
                    @Html.ActionLink("← Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
                    <button type="submit" class="btn btn-danger">Excluir Jogador</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
