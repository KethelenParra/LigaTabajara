@model LigaTabajara.Models.Jogador

@{
    ViewBag.Title = "Detalhes do Jogador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-detail {
        max-width: 600px;
        margin: 2rem auto;
    }

    .card-detail .card-header {
        background-color: #d4edda;
        color: #155724;
    }
</style>

<div class="card card-detail mb-5">
    <div class="card-header">
        <h5 class="mb-0">Detalhes do Jogador</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 font-weight-bold">Time</dt>
            <dd class="col-sm-8">@Model.Time.Nome</dd>

            <dt class="col-sm-4 font-weight-bold">Nome</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4 font-weight-bold">Nasc.</dt>
            <dd class="col-sm-8">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4 font-weight-bold">Nacionalidade</dt>
            <dd class="col-sm-8">@Model.Nacionalidade</dd>

            <dt class="col-sm-4 font-weight-bold">Posição</dt>
            <dd class="col-sm-8">@Model.Posicao</dd>

            <dt class="col-sm-4 font-weight-bold">Camisa</dt>
            <dd class="col-sm-8">@Model.NumCamisa</dd>

            <dt class="col-sm-4 font-weight-bold">Altura</dt>
            <dd class="col-sm-8">@Model.Altura</dd>

            <dt class="col-sm-4 font-weight-bold">Peso</dt>
            <dd class="col-sm-8">@Model.Peso</dd>

            <dt class="col-sm-4 font-weight-bold">Pé</dt>
            <dd class="col-sm-8">@Model.PePreferido</dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        @Html.ActionLink("← Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
        @Html.ActionLink("Editar", "Edit", new { id = Model.ID }, new { @class = "btn btn-success" })
    </div>
</div>
