@model LigaTabajara.Models.Partida

@{
    ViewBag.Title = "Nova Partida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm" style="width: 100%; max-width: 600px;">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Nova Partida</h4>
        </div>

        @using (Html.BeginForm("Create", "Partidas", FormMethod.Post, new { @class = "m-3" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="mb-3">
                @Html.LabelFor(m => m.DataPartida, "Data da Partida", new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.DataPartida, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(m => m.DataPartida, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col-6 mb-3">
                    @Html.LabelFor(m => m.TimeMandanteId, "Time Mandante", new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(m => m.TimeMandanteId, (SelectList)ViewBag.TimeMandanteId, "Selecione...", new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.TimeMandanteId, "", new { @class = "text-danger" })
                </div>

                <div class="col-6 mb-3">
                    @Html.LabelFor(m => m.TimeVisitanteId, "Time Visitante", new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(m => m.TimeVisitanteId, (SelectList)ViewBag.TimeVisitanteId, "Selecione...", new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.TimeVisitanteId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-6 mb-3">
                    @Html.LabelFor(m => m.GolsMandante, "Gols Mandante", new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.GolsMandante, new { @class = "form-control", type = "number", min = "0" })
                    @Html.ValidationMessageFor(m => m.GolsMandante, "", new { @class = "text-danger" })
                </div>
                <div class="col-6 mb-3">
                    @Html.LabelFor(m => m.GolsVisitante, "Gols Visitante", new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.GolsVisitante, new { @class = "form-control", type = "number", min = "0" })
                    @Html.ValidationMessageFor(m => m.GolsVisitante, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="card-footer bg-light d-flex justify-content-between">
                @Html.ActionLink("← Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
                <button type="submit" class="btn btn-success">Criar Partida</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
