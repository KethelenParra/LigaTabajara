@model LigaTabajara.Models.Partida

@{
    ViewBag.Title = "Excluir Partida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm w-100" style="max-width:600px;">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirmar Exclusão</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.TimeMandante.Nome)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.TimeMandante.Nome)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.TimeVisitante.Nome)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.TimeVisitante.Nome)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DataPartida)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.DataPartida)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.GolsMandante)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.GolsMandante)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.GolsVisitante)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.GolsVisitante)</dd>
            </dl>

            @using (Html.BeginForm("Delete", "Partidas", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div class="card-footer bg-light d-flex justify-content-between">
                    @Html.ActionLink("← Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
                    <button type="submit" class="btn btn-danger">Excluir Partida</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
