@model IEnumerable<LigaTabajara.Models.Partida>
@{
    ViewBag.Title = "Partidas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Calendário de Partidas</h2>
    <div>
        @Html.ActionLink("Gerar Calendário", "GerarPartidas", "Partidas", null,
            new { @class = "btn btn-primary me-2" })
        @using (Html.BeginForm("RecalcularEstatisticas", "Partidas", FormMethod.Post, new { @class = "d-inline" }))
        {
            <button type="submit" class="btn btn-warning me-2">Recalcular Estatísticas</button>
        }
        @Html.ActionLink("Novo Jogo", "Create", "Partidas",
            null, new { @class = "btn btn-success" })
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="thead-dark">
                <tr>
                    <th style="width: 20%;">Mandante</th>
                    <th style="width: 20%;">Visitante</th>
                    <th style="width: 20%;">Data</th>
                    <th style="width: 10%;">Gols M</th>
                    <th style="width: 10%;">Gols V</th>
                    <th style="width: 20%;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TimeMandante.Nome</td>
                        <td>@item.TimeVisitante.Nome</td>
                        <td>@item.DataPartida.ToString("dd/MM/yyyy")</td>
                        <td>@(item.GolsMandante.HasValue ? item.GolsMandante.Value.ToString() : "-")</td>
                        <td>@(item.GolsVisitante.HasValue ? item.GolsVisitante.Value.ToString() : "-")</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id },
                                    new { @class = "btn btn-outline-secondary" })
                                @Html.ActionLink("Detalhes", "Details", new { id = item.Id },
                                    new { @class = "btn btn-outline-info" })
                                @Html.ActionLink("Excluir", "Delete", new { id = item.Id },
                                    new { @class = "btn btn-outline-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
