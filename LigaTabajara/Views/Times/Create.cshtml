@model LigaTabajara.Models.Time

@{
    ViewBag.Title = "Novo Time";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm" style="width:100%; max-width:600px;">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Novo Time</h4>
        </div>

        @using (Html.BeginForm("Create", "Times", FormMethod.Post, new { @class = "m-3" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="mb-3">
                @Html.LabelFor(m => m.Nome, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Cidade, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Cidade, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Estado, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Estado, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.DataFundacao, "Data de Fundação", new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.DataFundacao, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(m => m.DataFundacao, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Estadio, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Estadio, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Estadio, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.CapacidadeEstadio, "Capacidade", new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.CapacidadeEstadio, new { @class = "form-control", type = "number", min = "0" })
                @Html.ValidationMessageFor(m => m.CapacidadeEstadio, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.CorUniformePrimario, "Cor Primária", new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.CorUniformePrimario, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CorUniformePrimario, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.CorUniformeSecuntario, "Cor Secundária", new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.CorUniformeSecuntario, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CorUniformeSecuntario, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.StatusTime, "Status", new { @class = "form-label fw-bold" })
                @Html.EnumDropDownListFor(m => m.StatusTime, new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.StatusTime, "", new { @class = "text-danger" })
            </div>

            <div class="card-footer bg-light d-flex justify-content-between">
                @Html.ActionLink("← Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
                <button type="submit" class="btn btn-success">Criar Time</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
