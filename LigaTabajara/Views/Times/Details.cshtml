@model LigaTabajara.Models.Time

@{
    ViewBag.Title = "Detalhes do Time";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-detail {
        max-width: 600px;
        margin: 2rem auto;
    }

    .card-detail .card-header {
        background-color: #d4edda;
        color: #155724;
    }
</style>

<div class="card card-detail mb-5">
    <div class="card-header">
        <h5 class="mb-0">Detalhes do Time</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 font-weight-bold">Nome</dt>
            <dd class="col-sm-8">@Model.Nome</dd>

            <dt class="col-sm-4 font-weight-bold">Cidade</dt>
            <dd class="col-sm-8">@Model.Cidade</dd>

            <dt class="col-sm-4 font-weight-bold">Estado</dt>
            <dd class="col-sm-8">@Model.Estado</dd>

            <dt class="col-sm-4 font-weight-bold">Fundação</dt>
            <dd class="col-sm-8">@Model.DataFundacao.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4 font-weight-bold">Estádio</dt>
            <dd class="col-sm-8">@Model.Estadio</dd>

            <dt class="col-sm-4 font-weight-bold">Capacidade</dt>
            <dd class="col-sm-8">@Model.CapacidadeEstadio</dd>

            <dt class="col-sm-4 font-weight-bold">Cor Primária</dt>
            <dd class="col-sm-8">@Model.CorUniformePrimario</dd>

            <dt class="col-sm-4 font-weight-bold">Cor Secundária</dt>
            <dd class="col-sm-8">@Model.CorUniformeSecuntario</dd>

            <dt class="col-sm-4 font-weight-bold">Status</dt>
            <dd class="col-sm-8">@Model.StatusTime</dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        @Html.ActionLink("← Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })
    </div>
</div>
