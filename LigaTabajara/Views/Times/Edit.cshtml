@model LigaTabajara.Models.Time

@{
    ViewBag.Title = "Editar Time";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm w-100" style="max-width:600px;">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Editar Time</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Times", FormMethod.Post, new { @class = "m-3" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                    <div class="row">
                        <div class="col-6 mb-3">
                            @Html.LabelFor(m => m.Nome, "Nome", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-6 mb-3">
                            @Html.LabelFor(m => m.DataFundacao, "Data de Fundação", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.DataFundacao, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.DataFundacao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            @Html.LabelFor(m => m.Cidade, "Cidade", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.Cidade, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Cidade, "", new { @class = "text-danger" }) 
                        </div>
                        <div class="col-6 mb-3">
                            @Html.LabelFor(m => m.Estado, "Estado", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.Estado, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            @Html.LabelFor(m => m.Estadio, "Estádio", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.Estadio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Estadio, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-6 mb-3">
                            @Html.LabelFor(m => m.CapacidadeEstadio, "Capacidade", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.CapacidadeEstadio, new { htmlAttributes = new { @type = "number", @class = "form-control", min = "0" } })
                            @Html.ValidationMessageFor(m => m.CapacidadeEstadio, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            @Html.LabelFor(m => m.CorUniformePrimario, "Cor Primária", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.CorUniformePrimario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.CorUniformePrimario, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-6 mb-3">
                            @Html.LabelFor(m => m.CorUniformeSecuntario, "Cor Secundária", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.CorUniformeSecuntario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.CorUniformeSecuntario, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="card-footer bg-light d-flex justify-content-between">
                        @Html.ActionLink("← Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
                        <button type="submit" class="btn btn-success">Salvar Alterações</button>
                    </div>
                    }
                </div>
            </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
